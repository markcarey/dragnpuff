{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "trailingSlash": false,
      "rewrites": [
        {
          "source": "/images/*.@(png)",
          "function": "api"
        },
        {
          "source": "/meta/**",
          "function": "api"
        },
        {
          "source": "/thumbs/**",
          "function": "api"
        },
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "/token/**",
          "function": "api"
        },
        {
          "source": "/random.png",
          "function": "api"
        }
      ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
